<mapper namespace="com.example.demo.board.mapper.ReplyMapper">

<!-- 댓글목록 +페이징 -->
	<select id="getReplyList" resultType="ReplyVO">
		SELECT * FROM ( SELECT ROWNUM AS rn, a.* FROM (
		
			SELECT rno
				 , bno
				 , reply
				 , replyer
				 , replyDate
				 , updateDate
			FROM tbl_reply
			WHERE bno = #{vo.bno}
			ORDER BY rno desc 
			
		) a WHERE ROWNUM <![CDATA[<= #{svo.end} ) b WHERE rn >= #{svo.start}]]>
	</select>
